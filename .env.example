# Server Configuration
NODE_ENV=development
SERVER_PORT=3333
LOG_LEVEL=info

# Database Configuration
# Para desenvolvimento (SQLite)
# DATABASE_CLIENT=sqlite3

# Para produção (PostgreSQL)
DATABASE_CLIENT=pg
DATABASE_URL=postgresql://user:password@localhost:5432/sushihana_db

# Authentication
AUTH_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d

# CORS Configuration
# Em desenvolvimento, usar: http://localhost:5173 ou seu frontend local
# Em produção, usar: https://seu-dominio-frontend.com
FRONTEND_URL=http://localhost:5173

# MercadoPago Configuration
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
# Para testes, usar: https://www.mercadopago.com.br/developers/pt/docs/checkout-api/landing
# Sandbox: TEST-xxxxx | Production: APP-xxxxx

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
# Número do restaurante para receber pedidos
RESTAURANT_WHATSAPP=+5511999999999

# Restaurant Configuration
RESTAURANT_NAME=Sushihana
DELIVERY_FEE=8.00
PREP_TIME_MIN=60
PREP_TIME_MAX=85

# Loyalty Points Configuration
POINTS_PER_REAL=1
# Exemplo: A cada R$ 1,00 gasto = 1 ponto
